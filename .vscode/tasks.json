{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file for MacOs",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-std=c++17",
                "${workspaceFolder}/leetcode/*.cpp",
                "${workspaceFolder}/AIDD/*.cpp",
                "${workspaceFolder}/ProgrammerKr/*.cpp",
